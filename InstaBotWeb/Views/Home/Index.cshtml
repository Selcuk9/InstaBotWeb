<body>
	<div class="content-temp">
		<a class="btn btn-primary" asp-action="Login" asp-controller="Account">Войти</a>
		<a class="btn btn-secondary" asp-action="Register" asp-controller="Account" >Создать аккаунт</a>
	</div>
	<section class="pb-0 pt-5 pt-lg-6">
		<div class="container border-bottom">
			<div class="row align-items-center justify-content-between">
				<div class="col-lg-7 col-xl-6 text-center px-md-6 px-lg-0">
