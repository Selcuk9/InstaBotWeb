@{
	Layout = "_LayoutProfile";
}
@model List<InstaBotWeb.Models.Telegram.DataBot>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
</head>
<div>
	<div class="container main">
		<div class="row">
			<div class="col-lg-4 control-panel">
				<input type="text" class="form-control" placeholder="Token Вашего Бота" id='token'>
				<input type="submit" class="btn-primary" id="btn-add" value="Добавить">
				<input type="submit" class="btn-success" id="btn-runAll" value="Запустить">
				<input type="submit" class="btn-success" id="btn-stopAll" value="Стоп">
				<div>
					@*onclick="GetChat(event);"*@
					<ul class="list-bots">
						@for (int i = 0; i < Model.Count; i++)
						{
							<li class="list-bots" id="@i">
								@Model[i].UsernameBot
								<a class="btn-start btn-primary" id="@Model[i].TokenBot">Запустить</a>
								<a class="btn-stop btn-primary" id="@Model[i].TokenBot">&#10060;</a>
							</li>
						}
					</ul>
				</div>
			</div>
			<div class="col-lg-8 chat-panel">

			</div>
		</div>
	</div>
	<script src="/js/telegram-script/telegram.js"></script>
</div>
	